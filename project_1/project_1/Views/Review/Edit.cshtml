@model project_1.Models.review

@{
    ViewBag.Title = "Edit Review Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>@ViewBag.Message</h3>

@using (Html.BeginForm("Update", "Review", FormMethod.Post))
{

    <form class="form-horizontal">
        <div class="form-group">

            @Html.TextBoxFor(x => x.rest_id)
            <br />
            @Html.TextBoxFor(x => x.name, new { htmlAttributes = new { @class = "form-control" } })
            <br />
            @Html.TextAreaFor(x => x.message, new { htmlAttributes = new { @class = "form-control" } })
            <br />
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" />
            </div>
        </div>
    </form>
}