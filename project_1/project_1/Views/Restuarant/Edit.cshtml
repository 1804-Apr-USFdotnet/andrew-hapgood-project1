@model project_1.Models.restuarant

@{
    ViewBag.Title = "Edit Restuarant Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>@ViewBag.Message</h3>

@using (Html.BeginForm("Update", "Restuarant", FormMethod.Post))
{

    <form class="form-horizontal">
        <div class="form-group">

            @Html.TextBoxFor(x => x.id)
            <br />
            @Html.TextBoxFor(x => x.name, new { htmlAttributes = new { @class = "form-control" } })
            <br />
            @Html.TextBoxFor(x => x.address, new { htmlAttributes = new { @class = "form-control" } })
            <br />
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" />
            </div>
        </div>
    </form>
}
