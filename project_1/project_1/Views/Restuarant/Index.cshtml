@model IEnumerable<project_1.Models.restuarant>
@{
    ViewBag.Title = "Restuarant Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>@ViewBag.Message</h3>

<a href="../Restuarant/Create" class="btn btn-primary">Create</a>

<div class="btn-group">
    <a href="#" class="btn btn-default">Sort</a>
    <a href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
    <ul class="dropdown-menu">
        <li>@Html.ActionLink("Name-Ascn", "Index", new { sort = "a" })</li>
        <li>>@Html.ActionLink("Name-Dsnc", "Index", new { sort = "z" })</li>
        <li>>@Html.ActionLink("Rating", "Index", new { sort = "n" })</li>
        <li class="divider"></li>
    </ul>
</div>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>#</th>
            <th> Restuarant Name</th>
            <th> Rating </th>
            <th> Address </th>
        </tr>
    </thead>
    <tbody>
        @{int i = 1; }

        @foreach (var item in Model)
        {
            <tr>
                <td>@i</td>
                <td>@item.name</td>
                <td>@item.rating</td>
                <td>@item.address</td>
                <td>@Html.ActionLink("Edit", "Edit", new { id = item.id})</td>
                <td>@Html.ActionLink("Delete", "Delete", new { id = item.id })</td>
                @{ i++;}
            </tr>
        }
    </tbody>
</table> 